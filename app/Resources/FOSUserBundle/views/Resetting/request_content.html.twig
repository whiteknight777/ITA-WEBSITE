{% extends '::base-authentification.html.twig' %}


{% block body %}


<div class="content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Form content box start -->
                <div class="form-content-box">
                    <!-- details -->
                    <div class="details">
                        <!-- Main title -->
                        <div class="main-title">
                            <img src="{{ asset('/bundles/img/logos/logo_png_mini.png') }}"/>
                            <h1 style="margin-top:30px;"><span> Passe Oublié</span></h1>
                        </div>
                         {% trans_default_domain 'FOSUserBundle' %}

                 <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal m-t-20">

                    <div class="form-group">
                        <div class="col-xs-12">
                            <label for="username">{{ 'resetting.request.username'|trans }}</label>
                            <input type="text" id="username" name="username" required="required"  class="input-text"/>

                        </div>
                    </div>

                    <div class="form-group text-center m-t-20 m-b-0">
                        <div class="col-xs-12">
                            <button value="{{ 'resetting.request.submit'|trans }}" class="button-md button-theme btn-block" type="submit">Envoyer email</button>
                        </div>
                    </div>

                </form>
                        <!-- Form end -->
                    </div>
                    <!-- Footer -->
                    <div class="footer">
                        <span>
                            Retourner à l'espace de connexion en <a href="{{ path('fos_user_security_login') }}">Cliquant ici</a>
                        </span>
                    </div>
                </div>
                <!-- Form content box end -->
            </div>
        </div>
    </div>
</div>




{% endblock %}